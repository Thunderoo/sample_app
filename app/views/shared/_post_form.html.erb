<%= form_for(@forum.posts.build(user_id: current_user.id, forum_id: @forum.id)) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div><%= f.hidden_field :user_id %></div>
    <div><%= f.hidden_field :forum_id %></div>
    <div class = "postContentField">
      <%= f.label :title %>
      <%= f.text_area :title, placeholder: "Post title"%>

      <%= f.label :content %>
      <%= f.text_area :content, placeholder: "Post content" %>
    </div>
    <%= f.submit "Post", class: "btn btn-large btn-primary" %>
<% end %>
