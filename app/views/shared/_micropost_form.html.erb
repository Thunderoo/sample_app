<%= form_for(@micropost) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class = "field">
    <%= f.text_area :content, placeholder: "Compose new micropost...", :onkeyup => "changeCounter();" %>
  </div>
  <div id="counter" class="counter">140 characters remaining</div>
  <%= f.submit "Post", class: "btn btn-large btn-primary" %>
<% end %>
<% content_for :head do %>
  <script>
    function changeCounter() {
        $("#counter").text((140 - $("#micropost_content").val().length) + "  characters remaining");
    }
  </script>
<% end %>